div(id="task-list" ng-show="authenticated")
  div(class="subject-group" ng-repeat="sub in subjects")
    h2(class="header") {{sub.name}}
    div(class="task" ng-repeat="task in tasks | filter: {subject: sub.$id}")
      h3 
        {{task.dueDate | date}} - {{task.name}}
      md-checkbox(ng-model="task.done" aria-label="{{task.name}} done?")
      md-button(class="md-warn md-mini   md-fab" ng-click="deleteTask(task)")
    md-button(id="new-task" class="md-fab md-small md-button md-primary" aria-label="New task" ng-click="toggleAddingTask()")
